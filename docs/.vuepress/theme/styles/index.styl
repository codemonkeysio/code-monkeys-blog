@import '~rfs/stylus'
@import './external-links.styl'
@import './custom-containers.styl'
@import './emoji-wrapping.styl'
@import './posts.styl'
@import './post.styl'
@import './inline-code-blocks.styl'
@import './flow-charts.styl'
@import './pagination.styl'
@import './vue-container.styl'
@import './github-style-tables.styl'
@import './badges.styl'

h1
  rfs-font-size(2.5rem)

h2
  rfs-font-size(2.25rem)
  border-bottom: 0.125rem solid $borderColor

h3
  rfs-font-size(2rem)

h4
  rfs-font-size(1.75rem)

h5
  rfs-font-size(1.5rem)

p, span, li, button, th, td, #pagination
  rfs-font-size(1.25rem)

a
  display: inline-block

.sidebar-heading > span
  rfs-font-size(1.1875rem)

.sidebar-group-items > li
  rfs-font-size(1.15625rem)

.sidebar-sub-headers > li
  rfs-font-size(1.125rem)

.theme-code-group__li
  rfs-font-size(1.625rem)

.theme-code-block
  rfs-font-size(1.4375rem)

.no-wrap-icons, .wrap-icons
  rfs-font-size(2rem)

.no-wrap-icons > a:not(:last-child)
  rfs-margin-right(4.6875rem)

@media (min-width: 26.3125rem)
  .wrap-icons > a
    rfs-margin-left(4.6875rem)

@media (max-width: 26.25rem)
  .wrap-icons > a:not(:first-child)
    rfs-margin-left(4.6875rem)

span.abbreviation
  rfs-font-size(1.125rem)

html
  background-color: $backgroundColor
  body
    background-color: $backgroundColor
    .navbar
      display: flex
      align-items: center
      height: 4.5rem
      background-color: $backgroundColor
      border-bottom: 0.125rem solid $borderColor
      .sidebar-button
        margin-top: 0.375rem
      span.site-name
        rfs-font-size(1.5rem)
      .nav-dropdown
        text-align: center
        background-color: $backgroundColor
        border: 0.125rem solid $borderColor
        padding: 0.8rem 0
        .dropdown-item
          padding-bottom: 0.4rem
          a:first-child
            color: inherit
            &.router-link-active::after
              border-left: 0
            &.router-link-active
              color: $accentColor
            &.router-link-active::after
              border-left: 0.3125rem solid $accentColor
          h4
            rfs-font-size(1.25rem)
            border-top: 0.0625rem solid $borderColor
            cursor: initial
            margin: 0.45rem 0.375rem 0
          a:hover
            color: $accentColor
          a.router-link-active::after
            left: 0.75rem
      .links
        background-color: transparent
        height: 3rem
        align-items: center
        .search-box
          margin-right: 1.5rem
          input
            rfs-font-size(1.125rem)
            background-color: transparent
            border: 0.125rem solid $borderColor
            color: $textColor
          .suggestions
            background-color: $backgroundColor
            border: 0.125rem solid $borderColor
            .suggestion
              &.focused
                background-color $backgroundColor
        @media (max-width: $MQMobile)
          .search-box
            margin-right: 0
            input
              left 0
            .suggestions
              left: initial
        .nav-links
          rfs-font-size(1.25rem)
          .nav-item:first-child
            margin-left: 0
          .nav-item
            margin-left: 1.75rem
            a:not(.external).router-link-active
              border-bottom: 0
            .dropdown-title
              rfs-font-size(1.25rem)
          .nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active
            border-bottom: 0.125rem solid #ed7c42
    .sidebar
      background-image: linear-gradient(90deg, $backgroundColorTwo, $backgroundColor)
      border-right: 0.125rem solid $borderColor
      .nav-links
        border-bottom: 0
        .nav-item:first-child
          margin-top: 1.15rem
          a
            color: inherit
            &:hover, &.router-link-active
              color: $accentColor
        .nav-item
          .nav-link
            rfs-font-size(1.1875rem)
          .mobile-dropdown-title
            rfs-font-size(1.1875rem)
          .dropdown-item
            a:first-child
              color: inherit
              &.router-link-active::after
                border-left: 0
              &.router-link-active
                color: $accentColor
              &.router-link-active::after
                border-left: 0.3125rem solid $accentColor
            a
              rfs-font-size(1.15625rem)
              &:hover
                color: $accentColor
            h4
              rfs-font-size(1.15625rem)
            .dropdown-subitem > a
              rfs-font-size(1.15625rem)
    .home
      padding: 0
      .home-content-wrapper
        min-height: calc(100vh - 10.8125rem)
        .home-content
          padding-top: 8rem
          .hero
            margin-left: 2rem
            margin-right: 2rem
            border: 0.125rem solid $darkBorderColor
            box-shadow: 0 0.5rem 1rem 0 $darkBorderColor
            transition: 0.2s
            border-radius: 5.625rem
            margin-bottom: 0.625rem
            background-image: radial-gradient(circle at center center, $backgroundColorThree, $backgroundColor)
            padding: 2rem
            img
              transition: transform 0.2s
            h1
              rfs-font-size(3rem)
            .description
              rfs-font-size(1.6rem)
            .action-button
              rfs-font-size(1.2rem)
          .hero:hover
            box-shadow: 0.125rem 0.5rem 1rem 0.125rem $darkBoxShadowColor
            img
              transform: scale(1.1)
          .features
            margin-left: 2rem
            margin-right: 2rem
            border-top: 0.125rem solid $borderColor
            border-bottom: 0.125rem solid $borderColor
            .feature
              text-align: center
              h2
                rfs-font-size(1.4rem)
    @media (max-width: 44.9375rem)
      .home
        .hero
          border-radius: 3.75rem
    @media (max-width: 26.1875rem)
      .home
        .hero
          border-radius: 2.8125rem
